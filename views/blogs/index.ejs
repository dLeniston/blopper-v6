<% include ../partials/header %>

<div class="content">
<div class="ui main text container">
    <div class="ui top attached huge header"><i class="write icon"></i>User Blogs</div>
    <div class="ui attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>" onerror='this.style.display = "none"'>
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%=blog.title%></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                            <span>By <strong><%= blog.author.username %></strong></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                                Read More
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>
</div>

<% include ../partials/footer%>