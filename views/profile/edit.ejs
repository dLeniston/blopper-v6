<% include ../partials/header %>

<div class="content">
<div class="ui main text container segment">
    <div class="ui huge header"><i class="write square icon"></i>Edit <%= profile.owner.username %>'s Profile</div>
        <form class="ui form" action="/profile/<%= profile._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Profile Image</label>
                <input type="text" name="profile[image]" value="<%= profile.image %>" required>
            </div>
            <div class="field">
                <label>Profile Description</label>
                <textarea name="profile[desc]" required><%= profile.desc %></textarea>
            </div>
            <input class="ui basic big violet button" type="submit">
        </form>
    </div>
</div>
<% include ../partials/footer %>